<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context="${packageName}.${activityClass}" >

    <ImageButton
        android:id="@+id/btnCampusMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:contentDescription="@string/str_campus_map"
        android:src="@drawable/btn_campus" />

    <ImageButton
        android:id="@+id/btnAreaMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCampusMap"
        android:layout_alignLeft="@+id/btnCampusMap"
        android:layout_marginBottom="40dp"
        android:background="@null"
        android:contentDescription="@string/str_area_map"
        android:src="@drawable/btn_area" />

    <ImageButton
        android:id="@+id/btnAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCampusMap"
        android:layout_below="@+id/btnCampusMap"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:contentDescription="@string/str_about"
        android:src="@drawable/btn_about" />

</RelativeLayout>